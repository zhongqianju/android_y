<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="480dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_input"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp">

           <com.example.androidjava.views.CircleImageView
               android:id="@+id/input_left_image"
               android:layout_width="40dp"
               android:layout_height="40dp" />
            <ImageView
                android:id="@+id/input_left_pass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:visibility="gone"
                android:layout_marginTop="9dp" />
        </LinearLayout>
        <EditText
            android:id="@+id/input_editText"
            android:layout_width="350dp"
            android:layout_height="42dp"
            android:background="@null"
            android:gravity="center"
            android:textCursorDrawable="@drawable/component_cursor"
            android:padding="4dp"
            android:textSize="20sp"
            android:importantForAutofill="no"
            android:inputType="none"
            android:maxLength="16"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/input_right_image"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_delete"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
