<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 阴影部分 -->
    <!-- 个人觉得更形象的表达：top代表下边的阴影高度，left代表右边的阴影宽度。其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#F0EFEF"
                android:startColor="#F0F0F0" />
            <corners
                android:bottomLeftRadius="26dp"
                android:bottomRightRadius="26dp"
                android:topLeftRadius="26dp"
                android:topRightRadius="26dp" />
        </shape>
    </item>
    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#80F3F1F1"
                android:startColor="#80F1F1F1" />
            <corners
                android:bottomLeftRadius="26dp"
                android:bottomRightRadius="26dp"
                android:topLeftRadius="26dp"
                android:topRightRadius="26dp" />
        </shape>
    </item>
</layer-list>